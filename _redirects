# Cloudflare Pages redirects for Light in Silence
# Handle SPA routing - serve index.html for specific routes only

# Redirect root domain to index.html
/ /index.html 200

# Handle specific routes that should serve the main page
/about /index.html 200
/submit /index.html 200
/contact /index.html 200
/resources /index.html 200
/check-reply /index.html 200
/login /index.html 200

# Handle admin and volunteer routes
/admin/* /index.html 200
/volunteer/* /index.html 200

# Serve static assets normally (no redirect)
/static/* /static/:splat 200
/NPO-SCA/static/* /NPO-SCA/static/:splat 200

# Handle API routes if needed
/api/* /index.html 200 