{
  "name": "light-in-silence-workers",
  "version": "1.0.0",
  "description": "Light in Silence mental health platform on Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --target=es2022",
    "db:create": "wrangler d1 create light-in-silence-db",
    "db:migrate": "wrangler d1 migrations apply light-in-silence-db",
    "db:migrate:local": "wrangler d1 migrations apply light-in-silence-db --local",
    "test": "vitest"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "hono": "^4.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.7",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "wrangler": "^3.25.0"
  },
  "keywords": [
    "mental-health",
    "cloudflare-workers",
    "typescript",
    "api"
  ],
  "author": "Light in Silence Team",
  "license": "MIT"
} 